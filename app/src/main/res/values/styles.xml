<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Toolbar" parent="@android:style/Widget.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="AppTheme.FrameLayoutWhite">
        <item name="android:background">@color/white</item>
    </style>
    <style name="AppTheme.H1" parent="@android:style/Widget.TextView">
        <item name="android:textSize">48dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/h1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppTheme.P" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/p</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="AppTheme.P.error" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="AppTheme.copyright" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/h1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppTheme.ButtonFull" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_full</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textButton</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">sentences</item>
    </style>
    <style name="AppTheme.ButtonEmpty" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_empty</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textButtonEmpty</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">sentences</item>
    </style>
    <style name="AppTheme.ButtonFacebook" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textButton</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">sentences</item>
    </style>



</resources>
